{
  "name": "ubl",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "watch:test": "npm t -- -w",
    "test": "mocha --recursive --compilers js:babel-register",
    "cover": "nyc npm t",
    "prebuild": "rimraf dist",
