    "build:main": "babel --out-dir dist src",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "chai": "^4.1.2",
    "ghooks": "2.0.4",
    "json-loader": "^0.5.7",
    "mocha": "^5.1.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.6.0",
    "rimraf": "^2.6.2",
    "webpack": "^4.5.0",
    "webpack-cli": "^2.0.14"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "dependencies": {
    "libxmljs": "^0.18.7",
    "lodash": "^4.17.5"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run test"
    }
  }
